if stats
  block stats
    if stats.week.geotags || stats.week.motiftagged || stats.week.motiftags
      h3= "Seneste 7 dage"
      ul
        if stats.week.geotags
          li Billeder placeret på kort: #{stats.week.geotags}
        if stats.week.motiftagged
          li Billeder med emneord: #{stats.week.motiftagged}
        if stats.week.motiftags
          li Antal emneord: #{stats.week.motiftags}

    if stats.total.geotags || stats.total.motiftagged || stats.total.motiftags
      h3= "Total"
      ul
        if stats.total.geotags
          li Billeder placeret på kort: #{stats.total.geotags}
        if stats.total.motiftagged
          li Billeder med emneord: #{stats.total.motiftagged}
        if stats.total.motiftags
          li Antal emneord: #{stats.total.motiftags}

    if stats.leaders
      h3= "Top 10 brugere den sidste uge"
      if stats.leaders.week
        ol
          each leader in stats.leaders.week
            li #{leader.name}: #{leader.points} point
      h3= "Top 25 brugere total"
      if stats.leaders.total
        ol
          each leader in stats.leaders.total
            li #{leader.name}: #{leader.points} point
