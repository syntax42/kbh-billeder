- var date_from_example = 'fx 24/12/1849'
- var date_to_example = 'fx 24/12/1945'
mixin dateIntervalRangePicker(field)
  .form-group.search-filter-sidebar__dates
    label(for=field + '-from-date') Fra dato
    input(type='date',
          name=field + '-from',
          id=field + '-from-date',
          placeholder=date_from_example,
          aria-label=date_from_example
      ).form-control
    label(for=field + '-to-date') Til dato
    input(
          type='date',
          name=field + '-to',
          id=field + '-to-date',
          placeholder=date_to_example,
          aria-label=date_to_example
      ).form-control
    button.btn.btn-default.btn-block(data-field=field,
                                     data-action='add-filter') Filtr√©r
