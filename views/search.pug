extends index
include mixins/meta
include mixins/loader

append header
  - title = helpers.generateSearchTitle(filters);
  +meta(title, description, image)

block content

  block before-results

  .let-it-grow
    if config.features.filterSidebar
      .filterbar
        .filterbar__item
          .filterbar__tab
            h2.search-filter-sidebar__heading.search-filter-sidebar__tab(tabindex="0")
              span(data-action='show-filterbar-menu')= 'Filtrering'
          #sidebar.filterbar__menu
            block sidebar
        .filterbar__item
          .filterbar__tab
            h2.search-filter-sidebar__heading.search-filter-sidebar__tab(tabindex="0")
              span(data-action='show-filterbar-menu')= 'Sortering'
          #sorting-menu.filterbar__menu
            include includes/search-results-sorting
      .search-results.row
        section.container-fluid
          .col-lg-12.col-sm-12.col-xs-12
            #results-header
              block results-header
            include includes/no-results-text
            #results.row
              block results
    else
      section.container-fluid
        .search-results
          #results-header
            block results-header
          include includes/no-results-text
          #results.row
            block results
    block after-results
      button.btn.btn-primary.btn-lg.invisible.load-more#load-more-btn
        +loader('Vis flere...')
  .clearfix

  if(config.features.scrollToTop)
    include includes/to-top
